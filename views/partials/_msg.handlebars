{{#if success_msg}}

    <div class="alert alert-success alert-dismissible fade show w-50 ml-auto mr-auto" role="alert">{{success_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span></button></div>

{{/if}}
{{#if error_msg}}

    <div class="alert alert-danger alert-dismissible fade show w-50 ml-auto mr-auto" role="alert">{{error_msg}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span></button></div>

{{/if}}
